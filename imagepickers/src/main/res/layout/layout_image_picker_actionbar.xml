<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/imagepicker_actionbar_height"
             android:background="@color/imagepicker_actionbar">

    <TextView
        android:id="@+id/tv_imagepicker_actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/imagepicker_text_white"
        android:textSize="@dimen/imagepicker_title_size"/>
    <Button
        android:id="@+id/btn_image_data_ok"
        style="@style/BtnOkStyle"
        android:gravity="center"
        android:layout_gravity="right|center_vertical"
        android:paddingLeft="@dimen/imagepicker_padding"
        android:paddingRight="@dimen/imagepicker_padding"
        android:layout_marginRight="@dimen/imagepicker_padding"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/bt_down"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/imagepicker_padding"
        android:layout_gravity="right|center_vertical"
        android:text="下载"
        android:textColor="#fff"
        android:background="@drawable/imagepicker_actionbar_menu_selector"
        android:textSize="@dimen/imagepicker_text_size"
        />

    <TextView
        android:id="@+id/tv_imagepicker_actionbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_horizontal"
        android:background="@drawable/imagepicker_actionbar_menu_selector"
        android:drawableLeft="@drawable/ic_imagepicker_arrow_left"
        android:gravity="center"
        android:paddingLeft="@dimen/imagepicker_padding"
        android:paddingRight="@dimen/imagepicker_padding"
        android:text="@string/imagepicker_back"
        android:textColor="@color/imagepicker_text_white"
        android:textSize="@dimen/imagepicker_text_size"/>
</FrameLayout>